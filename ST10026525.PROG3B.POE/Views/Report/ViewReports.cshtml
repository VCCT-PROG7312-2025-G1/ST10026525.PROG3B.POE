@model Queue<ST10026525.PROG3B.POE.Models.Report>

<div class="container form-page-container">
    <h2 class="mb-4">Your Reports</h2>

    @if (Model == null || Model.Count == 0)
    {
        <p>No reports submitted yet.</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-success">
                <tr>
                    <th>Location</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Media</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var report in Model)
                {
                    <tr>
                        <td>@report.Location</td>
                        <td>@report.Category</td>
                        <td>@report.Description</td>
                        <td>
                            @if (!string.IsNullOrEmpty(report.MediaFileName))
                            {
                                <a href="@Url.Content($"~/uploads/{report.MediaFileName}")" target="_blank">View</a>
                            }
                            else
                            {
                                <span>No file</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a href="#" class="btn btn-gold w-100 mt-1" onclick="alert('🚧 Service Request Status is coming soon!'); return false;">Service Request Status</a>
</div>
